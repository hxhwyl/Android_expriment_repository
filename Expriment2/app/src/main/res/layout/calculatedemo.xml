<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/text_input_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_display"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="0.0"
            android:textSize="36sp"
            android:gravity="center_vertical|end"
            android:paddingEnd="12dp"
            android:background="#D6D8C8"  android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_input_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.50" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_v3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" /> <Button
        android:id="@+id/btn_7"
        style="@style/Widget.AppCompat.Button"
        android:text="7"
        app:layout_constraintTop_toBottomOf="@id/text_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_v1"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="@id/btn_4"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="4dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_8"
            style="@style/Widget.AppCompat.Button"
            android:text="8"
            app:layout_constraintTop_toTopOf="@id/btn_7"
            app:layout_constraintBottom_toBottomOf="@id/btn_7"
            app:layout_constraintStart_toStartOf="@id/guide_v1"
            app:layout_constraintEnd_toStartOf="@id/guide_v2"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_9"
            style="@style/Widget.AppCompat.Button"
            android:text="9"
            app:layout_constraintTop_toTopOf="@id/btn_7"
            app:layout_constraintBottom_toBottomOf="@id/btn_7"
            app:layout_constraintStart_toStartOf="@id/guide_v2"
            app:layout_constraintEnd_toStartOf="@id/guide_v3"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_divide"
            style="@style/Widget.AppCompat.Button"
            android:text="รท"
            app:layout_constraintTop_toTopOf="@id/btn_7"
            app:layout_constraintBottom_toBottomOf="@id/btn_7"
            app:layout_constraintStart_toStartOf="@id/guide_v3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_4"
            style="@style/Widget.AppCompat.Button"
            android:text="4"
            app:layout_constraintTop_toBottomOf="@id/btn_7"
            app:layout_constraintBottom_toTopOf="@id/btn_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guide_v1"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_5"
            style="@style/Widget.AppCompat.Button"
            android:text="5"
            app:layout_constraintTop_toTopOf="@id/btn_4"
            app:layout_constraintBottom_toBottomOf="@id/btn_4"
            app:layout_constraintStart_toStartOf="@id/guide_v1"
            app:layout_constraintEnd_toStartOf="@id/guide_v2"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_6"
            style="@style/Widget.AppCompat.Button"
            android:text="6"
            app:layout_constraintTop_toTopOf="@id/btn_4"
            app:layout_constraintBottom_toBottomOf="@id/btn_4"
            app:layout_constraintStart_toStartOf="@id/guide_v2"
            app:layout_constraintEnd_toStartOf="@id/guide_v3"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_multiply"
            style="@style/Widget.AppCompat.Button"
            android:text="ร"
            app:layout_constraintTop_toTopOf="@id/btn_4"
            app:layout_constraintBottom_toBottomOf="@id/btn_4"
            app:layout_constraintStart_toStartOf="@id/guide_v3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_1"
            style="@style/Widget.AppCompat.Button"
            android:text="1"
            app:layout_constraintTop_toBottomOf="@id/btn_4"
            app:layout_constraintBottom_toTopOf="@id/btn_decimal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guide_v1"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_2"
            style="@style/Widget.AppCompat.Button"
            android:text="2"
            app:layout_constraintTop_toTopOf="@id/btn_1"
            app:layout_constraintBottom_toBottomOf="@id/btn_1"
            app:layout_constraintStart_toStartOf="@id/guide_v1"
            app:layout_constraintEnd_toStartOf="@id/guide_v2"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_3"
            style="@style/Widget.AppCompat.Button"
            android:text="3"
            app:layout_constraintTop_toTopOf="@id/btn_1"
            app:layout_constraintBottom_toBottomOf="@id/btn_1"
            app:layout_constraintStart_toStartOf="@id/guide_v2"
            app:layout_constraintEnd_toStartOf="@id/guide_v3"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_add"
            style="@style/Widget.AppCompat.Button"
            android:text="+"
            app:layout_constraintTop_toTopOf="@id/btn_1"
            app:layout_constraintBottom_toBottomOf="@id/btn_1"
            app:layout_constraintStart_toStartOf="@id/guide_v3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_decimal"
            style="@style/Widget.AppCompat.Button"
            android:text="."
            app:layout_constraintTop_toBottomOf="@id/btn_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guide_v1"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_0"
            style="@style/Widget.AppCompat.Button"
            android:text="0"
            app:layout_constraintTop_toTopOf="@id/btn_decimal"
            app:layout_constraintBottom_toBottomOf="@id/btn_decimal"
            app:layout_constraintStart_toStartOf="@id/guide_v1"
            app:layout_constraintEnd_toStartOf="@id/guide_v2"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_equals"
            style="@style/Widget.AppCompat.Button"
            android:text="="
            app:layout_constraintTop_toTopOf="@id/btn_decimal"
            app:layout_constraintBottom_toBottomOf="@id/btn_decimal"
            app:layout_constraintStart_toStartOf="@id/guide_v2"
            app:layout_constraintEnd_toStartOf="@id/guide_v3"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btn_subtract"
            style="@style/Widget.AppCompat.Button"
            android:text="-"
            app:layout_constraintTop_toTopOf="@id/btn_decimal"
            app:layout_constraintBottom_toBottomOf="@id/btn_decimal"
            app:layout_constraintStart_toStartOf="@id/guide_v3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>